{% extends "layout.html.twig" %}
{% block content %}
    <div class="container-fluid col-12 home-page-image mb-3 bg-dark">
        <img src="{{ asset('assets/images/home-page-image.png') }}" class="home-image col-12 col-sm-8 col-lg-8 col-xl-8 bg-light"/>
        <h1 class="home-page-text">Snowboard Tricks</h1>
        <a class="home-page-down-button"><i class="bi bi-arrow-down-square-fill"></i></a>
    </div>
    <div class="container-fluid col-12 trick-container">
        <h3 class="mt-3 text-title-trick text-center text-uppercase">Les tricks</h3>
        <div id="trick-list" class="container-fluid col-12 scroll-page d-flex justify-content-around flex-wrap" data-nb-trick='0' data-lock-trick='0'>
        </div>
        <div class="text-center m-auto col-5 col-sm-5 col-lg-3 col-xl-3 mt-5 mb-3">
            <button type="button" class="col-12 btn btn-primary load-trick">Voir plus</button>
        </div>
    </div>
    <a class="home-page-up-button"><i class="bi bi-arrow-up-square-fill"></i></a>
{% endblock %}
