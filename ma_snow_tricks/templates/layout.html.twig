<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Bienvenue{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('assets/styles/style.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/styles/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    </head>
    <body>
        <div class="container-fluid menu-container d-flex justify-content-end bg-dark">
            <ul class="menu m-0 p-3">
                <li class="p-3"><a href="/">Accueil</a></li>
                <li class="p-3"><a href="/trick">Tricks</a></li>
                {% if app.user %}
                    <li class="p-3"><a href="{{ path('account') }}">Mon Compte</a></li>
                    <li class="p-3"><a href="{{ path('app_logout') }}">Deconnexion</a></li>
                {% else %}
                    <li class="p-3"><a href="/registration">Inscription</a></li>
                    <li class="p-3"><a href="/login">Connexion</a></li>
                {% endif %}
            </ul>
        </div>
        {% block content %}{% endblock %}
        <footer>
            <script type="text/javascript" src="{{ asset('assets/js/jquery-3.7.1.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('assets/js/home-page.js') }}"></script>
        </footer>
    </body>
</html>
